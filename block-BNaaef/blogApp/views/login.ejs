<%- include('content/header') -%>
<div class="container center">
  <div class="form form-control">
      <h3 class="form-title">Login</h3>
      <% if(userName) { %>
        <p><%= userName %></p>
     <% } %>
     <% if(email) { %>
        <p><%= email %></p>
     <% } %>
     <% if(regsuccess) { %>
        <p><%= regsuccess %></p>
     <% } %>
     <% if(ep) { %>
        <p><%= ep %></p>
     <% } %>
     <% if(un) { %>
        <p><%= un %></p>
     <% } %>
     <% if(password) { %>
        <p><%= password %></p>
     <% } %>
     <% if(permit) { %>
        <p><%= permit %></p>
     <% } %>
      <form action="/users/login", method="POST">
          <input type="text" name="username" id="username" placeholder="Enten Username">
          <input type="password" name="password" id="password" placeholder="Enter Password">
          
          <input type="submit" value="Login">
      </form>
  </div>
  <hr>
  <div class="register-btn">
   <a href="/users/auth/github"><button>Login With Github</button></a>
   <a href="/users/auth/google"><button>Login With Google</button></a>
 </div>
</div>
<%- include('content/footer') -%>