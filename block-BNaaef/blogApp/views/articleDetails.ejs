<%- include('content/header') -%>
<div class="container padding ">
        <div class="article-content">
            <h2 class="article-title"><%= article.title %> <% if(user) { %> 
                <span class="like"><a href="/articles/<%= article.slug %>/like"><i class="fa fa-thumbs-up"></i></a></span><span class="dislike"><a href="/articles/<%= article.slug %>/dislike"><i class="fa fa-thumbs-down"></i></a>|</span>
                <% } %> </h2>
            <p class="article-description"><%= article.description %></p>
        </div>
        <div class="comment center">
            <% article.comments.forEach(comment => { %>
                <h3 class="comment-name"><%= comment.content %> <span class="like">Total Likes(<%= comment.likes %>)</span></h3>
                <p class="comment-author"><%= comment.author.username %> 
                    <% if(user) { %> 
                    <span class="like"><a href="/comments/<%= comment.id %>/like"><i class="fa fa-thumbs-up"></i></a></span>
                <% } %>
                </p>
                <div class="buttons">
                    <a href="/comments/<%= comment.id %>/edit"><button>Edit</button></a>
                    <a href="/comments/<%= comment.id %>/delete"><button>Delete</button></a>
                </div>
                <hr>
           <% }) %>
            
        </div>
        <div class="form form-control center">
            <h3 class="form-title">Comment</h3>
            <form action="/articles/<%= article.slug %>/Comment" method="POST">
                <textarea name="content" id="content" cols="10" rows="5" placeholder="Enter Comment"></textarea>
                <input type="submit" value="Comment">
            </form>
        </div>
        
</div>
<%- include('content/footer') -%>